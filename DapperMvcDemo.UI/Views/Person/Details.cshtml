a@model DapperMvcDemo.Data.Models.Domain.Person

@{
    ViewData["Title"] = "Person Details";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Address:</strong> @Model.Address</p>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Edit", "Person", new { id = Model.Id })" class="btn btn-warning">Edit</a>
        <a href="@Url.Action("Index", "Person")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
