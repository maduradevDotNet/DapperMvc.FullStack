@model IEnumerable<DapperMvcDemo.Data.Models.Domain.Person>

@{
    ViewData["Title"] = "Person Index";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <!-- Table to display list of people -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Email</td>
                    <td>@person.Address</td>
                    <td>
                        <!-- Action buttons -->
                        <a href="@Url.Action("Details", "Person", new { id = person.Id })" class="btn btn-info btn-sm">Details</a>
                        <form method="post" action="@Url.Action("Delete", "Person", new { id = person.Id })" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this person?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Link to create a new person -->
    <a href="@Url.Action("Create", "Person")" class="btn btn-primary">Create New Person</a>
</div>
