@model DapperMvcDemo.Data.Models.Domain.Person

@{
    ViewData["Title"] = "Delete Person";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this person?
    </div>

    <form method="post" asp-action="Delete" asp-controller="Person">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Address:</strong> @Model.Address</p>
        </div>

        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Person")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
